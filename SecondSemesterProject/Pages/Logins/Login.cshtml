@page
@model SecondSemesterProject.Pages.Login.LoginModel
@{
    ViewData["Title"] = "Log Ind";
}

<p>@Model.InfoText</p>

<h1>Log ind</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Email" class="control-label"></label>
                <input type="email" asp-for="@Model.Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Password" class="control-label"></label>
                <input type="password" asp-for="@Model.Password" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Log Ind" class="btn btn-primary" />
                <a asp-page="/Profiles/CreateProfile"><input type="button" value="Registrer ny konto" class="btn btn-light" /></a>
            </div>
            <div>
                <a asp-page="/Logins/ForgotAccount"><input type="button" value="Glemt Kodeord" class="btn btn-light" /></a>
            </div>
        </form>
    </div>
</div>
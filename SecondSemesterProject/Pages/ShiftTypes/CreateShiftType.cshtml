@page
@model SecondSemesterProject.Pages.ShiftTypes.CreateShiftTypeModel
@{
    ViewData["Title"] = "Opret vagttype";
}

<h1>Opret vagttype</h1>

<div class="row">
    <div class="col-md-5">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.shiftType.Name">Vagttype</label>
                <input asp-for="@Model.shiftType.Name" required/>
            </div>
            <div class="form-group">
                <label asp-for="@Model.shiftType.Color">Farve</label>
                <input asp-for="@Model.shiftType.Color" type="color"/>
            </div>
            <div class="form-group">
                <input class="btn-success" type="submit" value="Opret VagtType"/>
                <a asp-page="/ShiftTypes/GetAllShiftType" ><input class="btn-danger" type="button" value="Anuller"/></a>
            </div>
        </form>
    </div>
</div>
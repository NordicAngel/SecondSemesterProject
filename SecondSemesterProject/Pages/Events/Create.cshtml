@page
@model SecondSemesterProject.Pages.Events.CreateModel
@{
    ViewData["Title"] = "Create Event";
}

<h1>Create Event</h1>
<p>
    <a asp-page="Index">Back to List</a>
</p>

@if (Model.ErrorMsg != null)
{
    <span style="color: red">@Model.ErrorMsg</span>
}

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Event.EventId" class="control-label"></label>
                <input asp-for="@Model.Event.EventId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Event.Name" class="control-label"></label>
                <input asp-for="@Model.Event.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Event.Description" class="control-label"></label>
                <input asp-for="@Model.Event.Description" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Event.Time" class="control-label"></label>
                <input asp-for="@Model.Event.Time" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Event.Place" class="control-label"></label>
                <input asp-for="@Model.Event.Place" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Event.Image" class="control-label"></label>
                <input asp-for="@Model.Event.Image" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <input type="button" value="Cancel" class="btn btn-link" />
        </form>
    </div>
</div>
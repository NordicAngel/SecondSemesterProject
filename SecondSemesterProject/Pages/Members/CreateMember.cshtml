@page
@model SecondSemesterProject.Pages.Members.CreateMemberModel
@{
    ViewData["Title"] = "Create Member";
}

<p>@Model.InfoText</p>

<h1>Create Member</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All">
                <div class="form-group">
                    <label asp-for="@Model.Member.ID"></label><br />
                    <input asp-for="@Model.Member.ID">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Member.Name"></label><br />
                    <input asp-for="@Model.Member.Name">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Member.Email"></label><br />
                    <input asp-for="@Model.Member.Email">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Member.Password"></label><br />
                    <input asp-for="@Model.Member.Password">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Member.PhoneNumber"></label><br />
                    <input asp-for="@Model.Member.PhoneNumber">
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" />
                    <a asp-page="/Members/Index"><input type="button" value="Cancel" /></a>
                </div>
            </div>
        </form>
    </div>
</div>
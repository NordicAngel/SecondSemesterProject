@page
@model SecondSemesterProject.Pages.Members.FamilyGroups.DeleteFamilyGroupModel
@{
    ViewData["Title"] = "Slet Familiegruppe";
}

<p>@Model.InfoText</p>

<h1>Slet familiegruppe</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All">
                <div class="form-group">
                    <label>Er du sikker på at du vil slette familiegruppe @Model.FamilyGroupID?</label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Slet" class="btn btn-danger" />
                    <a asp-page="/Members/FamilyGroups/FamilyGroup" asp-route-id="@Model.FamilyGroupID"><input type="button" value="Tilbage" class="btn btn-light" /></a>
                </div>
            </div>
        </form>
    </div>
</div>
@page
@model SecondSemesterProject.Pages.Members.FamilyGroupModel
@{
    ViewData["Title"] = "Familiegruppe";
}

<p>@Model.InfoText</p>

<p>
    <a asp-page="/Members/FamilyGroups/UpdateFamilyGroup" asp-route-id="@Model.FamilyGroupID" class="btn btn-primary">Opdater familiegruppe</a>
</p>

<h4>Familiegruppe nummer: @Model.FamilyGroupID</h4>

<table class="table">
    <thead>
    <tr>
        <th>
            ID
        </th>
        <th>
            Name
        </th>
        <th>
            E-mail
        </th>
        <th>
            Password
        </th>
        <th>
            Phone Number
        </th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Members)
    {
        <tr>
            <td>
                @item.ID
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.Email
            </td>
            <td>
                @item.Password
            </td>
            <td>
                @item.PhoneNumber
            </td>
            <td>
                <p>
                    <a asp-page="/Members/UpdateMember" asp-route-id="@item.ID" class="btn btn-light">Opdater</a>
                </p>
            </td>
            <td>
                <p>
                    <a asp-page="/Members/DeleteMember" asp-route-id="@item.ID" class="btn btn-light">Fjern</a>
                </p>
            </td>
        </tr>
    }
</table>
@page
@model SecondSemesterProject.Pages.Members.FamilyGroup.CreateFamilyGroupModel
@{
    ViewData["Title"] = "Create Member";
}

<p>@Model.InfoText</p>

<h1>Create Member</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All">
                <div class="form-group">
                    <label>Select maximum 5 members</label>
                    <select asp-for="@Model.Members" asp-items="@Model.Options" class="form-control">
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" />
                    <a asp-page="/Members/Index"><input type="button" value="Cancel" /></a>
                </div>
            </div>
        </form>
    </div>
</div>
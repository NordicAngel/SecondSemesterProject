@page
@model SecondSemesterProject.Pages.Members.UpdateMemberModel
@{
    ViewData["Title"] = "Update Member";
}

<p>@Model.InfoText</p>

<h1>Update Member</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All">
                <input type="hidden" asp-for="@Model.Member.ID" class="form-control" />
                <div class="form-group">
                    <label asp-for="@Model.Member.Name"></label><br />
                    <input asp-for="@Model.Member.Name">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Member.Email"></label><br />
                    <input asp-for="@Model.Member.Email">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Member.Password"></label><br />
                    <input asp-for="@Model.Member.Password">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Member.PhoneNumber"></label><br />
                    <input asp-for="@Model.Member.PhoneNumber">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Member.BoardMember"></label>
                    <input type="checkbox" asp-for="@Model.Member.BoardMember">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Member.HygieneCertified"></label>
                    <input type="checkbox" asp-for="@Model.Member.HygieneCertified">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Member.CafeApprentice"></label>
                    <input type="checkbox" asp-for="@Model.Member.CafeApprentice">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Member.BakerApprentice"></label>
                    <input type="checkbox" asp-for="@Model.Member.BakerApprentice">
                </div>
                <div class="form-group">
                    <input type="submit" value="Update" />
                    <a asp-page="/Members/Index"><input type="button" value="Cancel" /></a>
                </div>
            </div>
        </form>
    </div>
</div>
@page
@model SecondSemesterProject.Pages.Members.UpdateMemberModel
@{
    ViewData["Title"] = "Opdater Medlem";
}

<p>@Model.InfoText</p>

<h1>Opdater medlem</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All">
                <input type="hidden" asp-for="@Model.Member.ID" class="form-control" />
                <input type="hidden" asp-for="@Model.Member.FamilyGroupID" class="form-control" />
                <input type="hidden" asp-for="@Model.Member.ImageFileName" class="form-control" />
                <div class="form-group">
                    <label>Navn</label><br />
                    <input asp-for="@Model.Member.Name">
                </div>
                <div class="form-group">
                    <label>E-mail</label><br />
                    <input asp-for="@Model.Member.Email">
                </div>
                <div class="form-group">
                    <label>Kodeord</label><br />
                    <input asp-for="@Model.Member.Password">
                </div>
                <div class="form-group">
                    <label>Telefonnummer</label><br />
                    <input asp-for="@Model.Member.PhoneNumber">
                </div>
                <div class="form-group">
                    <label>Bestyrelse</label>
                    <input type="checkbox" asp-for="@Model.Member.BoardMember">
                </div>
                <div class="form-group">
                    <label>Hygiejnekursus</label>
                    <input type="checkbox" asp-for="@Model.Member.HygieneCertified">
                </div>
                <div class="form-group">
                    <input type="submit" value="Opdater" class="btn btn-primary" />
                    <a asp-page="/Members/Index"><input type="button" value="Tilbage" class="btn btn-light" /></a>
                </div>
            </div>
        </form>
    </div>
</div>
@page
@model SecondSemesterProject.Pages.Members.DeleteMemberModel
@{
    ViewData["Title"] = "Slet Medlem";
}

<p>@Model.InfoText</p>

<h1>Slet medlem</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All">
                <input type="hidden" asp-for="@Model.Member.ID" class="form-control" />
                <div class="form-group">
                    <label>Navn</label><br />
                    <label>@Model.Member.Name</label>
                </div>
                <div class="form-group">
                    <label>E-mail</label><br />
                    <label>@Model.Member.Email</label>
                </div>
                <div class="form-group">
                    <label>Kodeord</label><br />
                    <label>@Model.Member.Password</label>
                </div>
                <div class="form-group">
                    <label>Telefonnummer</label><br />
                    <label>@Model.Member.PhoneNumber</label>
                </div>
                <div class="form-group">
                    <label>Bestyrelse</label>
                    <label>@Model.Member.BoardMember</label>
                </div>
                <div class="form-group">
                    <label>Hygiejnekursus gennemført</label>
                    <label>@Model.Member.HygieneCertified</label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Slet" class="btn btn-danger" />
                    <a asp-page="/Members/Index"><input type="button" value="Tilbage" class="btn btn-light" /></a>
                </div>
            </div>
        </form>
    </div>
</div>